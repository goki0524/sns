<% provide(:title, @title) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= gravatar_for @user %>
      <h1><%= @user.name %></h1>
      <span><%= link_to "プロフィール", @user %></span>
      <span><b>マイクロポスト:</b> <%= @user.microposts.count %></span>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
      <% if @friends.any? %>
        <div class="user_avatars">
          <% @friends.each do |friend| %>
            <%= link_to gravatar_for(friend, size: 30), friend %>
          <% end %>
        </div>
      <% end %>
    </section>
    
    
  </aside>
  
  <div class="col-md-8">
    <h3><%= @title %></h3>
    
    <% if @friends.any? %>
      <ul class="users follow">
        <%= render @friends %>
      </ul>
    <% end %>
    
  </div>
</div>