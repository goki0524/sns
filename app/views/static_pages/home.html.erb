<% if logged_in? %>

  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="stats">
        <%= render 'shared/stats' %>
      </section>
      <section class="micropost_form">
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
      <div class="col-md-8">
        <div class="micropost_search">
          <%= form_tag root_path, :method => 'get' do %>
            <%= text_field_tag :search, params[:search], placeholder: "マイクロポスト検索...", class: 'form-control' %>
            <%= submit_tag "検索", :name => nil, class: "btn btn-primary btn-search"%>
          <% end %>
        </div>
        
        
        <h3>マイクロポスト フィード</h3>
        <%= render 'shared/feed' %>
      </div>
  </div>
  
<% else %>

  <div class="center jumbotron">
    
    <h1>
      Life Note
    </h1>

    <h2>
        About Life Note...
    </h2>

      <%= link_to "新規登録する", signup_path, class: "btn btn-lg btn-primary" %>
  </div>
  
  <%= link_to image_tag("kitten.jpg", alt: "cat image"), 'http://www.pet-home.jp/cats/baby/' %>
<% end %>
